<!--
  - Allowed static fields:
  - location   - where the log came from (only on FTS)
  - srcuser    - extracts the source username
  - dstuser    - extracts the destination (target) username
  - user       - an alias to dstuser (only one of the two can be used)
  - srcip      - source ip
  - dstip      - dst ip
  - srcport    - source port
  - dstport    - destination port
  - protocol   - protocol
  - id         - event id
  - url        - url of the event
  - action     - event action (deny, drop, accept, etc)
  - status     - event status (success, failure, etc)
  - extra_data - Any extra data
-->

<!-- Decoder para o comando usermod -->
<!-- Decoder para usermod -->
<decoder name="linux_usermod_group">
  <program_name type="pcre2">(?i)usermod</program_name>
  <regex type="pcre2">add\s+'(\w+)'\s+to\s+(?:shadow\s+)?group\s+'(\w+)'</regex>
  <order>user,group</order>
</decoder>


<decoder name="gpasswdgpasswd-plus">
    <parent>gpasswd</parent>
    <prematch offset="after_parent">members of</prematch>
    <regex offset="after_parent">group (\S+) set by (\S+) to</regex>
    <order>group,srcuser</order>
</decoder>